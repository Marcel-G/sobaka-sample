{
  "compilerOptions": {
    "module": "es6",
    "lib": ["dom", "es2017"],
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
  },
  "exclude": ["node_modules", "dist"],
  "include": ["lib", "bindings", "pkg"]
}
